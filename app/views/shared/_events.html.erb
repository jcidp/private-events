<%= link_to "Create event", new_event_path %>
<div class="events">
  <% if events.any? %>
    <% events.each do |event| %>
      <div class="event">
        <h2><%= event.name %></h2>
        <p>By: <%= event.creator.username %></p>
        <p><%= event.date %></p>
        <p><%= event.location %></p>
      </div>
    <% end %>
  <% else %>
    <h2><%= empty_state_message %></h2>
  <% end %>
</div>